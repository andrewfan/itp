<div class="page-header">
  <h1>ITP {{model.course_number}} - {{model.course_name}}</h1>
</div>

<div class="row">
  <div class="col-md-7">
    <h3 class="block-title">Lectures</h3>

    {{#each activeLectures as |lecture|}}
      <div class="lecture">
        <p class="lecture-date">{{lecture.date}}</p>
        {{#each lecture.units as |unit|}}
          {{lecture-unit unit=unit}}
        {{/each}}
      </div>
    {{/each}}
  </div>
  <div class="col-md-5">
    <h3 class="block-title">Assignments</h3>
    <ol>
      {{#each model.assignments as |assignment|}}
        <li>{{assignment.name}}</li>
      {{/each}}
    </ol>
  </div>
</div>
